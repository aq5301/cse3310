<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ashley.battleship.Results"
    tools:showIn="@layout/activity_results">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total moves:"
        android:id="@+id/total_moves"
        android:layout_marginStart="69dp"
        android:layout_above="@+id/num_hits"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of Hits:"
        android:id="@+id/num_hits"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/total_moves"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="[WINNER GOES HERE]"
        android:id="@+id/winner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/new_game"
        android:maxLength="18"
        android:layout_alignTop="@+id/p_moves"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="37dp"
        android:background="#425195"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/main_menu"
        android:layout_alignTop="@+id/num_hits"
        android:layout_alignStart="@+id/new_game"
        android:maxLength="9"
        android:layout_alignEnd="@+id/new_game"
        android:background="#425195"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="[Player Moves]"
        android:id="@+id/p_moves"
        android:layout_alignTop="@+id/total_moves"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="[Player hits]"
        android:id="@+id/p_hits"
        android:layout_alignTop="@+id/num_hits"
        android:layout_alignEnd="@+id/p_moves"/>


</RelativeLayout>
