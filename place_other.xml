<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShipPlacement">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/start"
        android:layout_marginRight="78dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/imageView"
        android:background="#0d112e"
        android:layout_alignStart="@+id/canStart"
        android:layout_alignBottom="@+id/current_Ship"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/current_Ship"
        android:background="@drawable/twoship"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="46dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please fill the board"
        android:id="@+id/canStart"
        android:layout_alignStart="@+id/start"
        android:layout_above="@+id/start"
        android:layout_alignEnd="@+id/start"
        android:textColor="#000000"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:id="@+id/bg"
        android:background="#0d112e"
        android:layout_centerVertical="true"
        />

</RelativeLayout>