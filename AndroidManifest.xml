<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ashley.battleship">

    <application
        android:name=".Globals"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingMenu"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="landscape"/>
        <activity
            android:name=".Volume"
            android:label="@string/title_activity_volume"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Difficulty"
            android:label="@string/title_activity_difficulty"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Graphics"
            android:label="@string/title_activity_graphics"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ShipPlacement"
            android:label="@string/title_activity_ship_placement"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Results"
            android:label="@string/title_activity_results"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".GameBoard"
            android:label="@string/title_activity_game_board"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>
